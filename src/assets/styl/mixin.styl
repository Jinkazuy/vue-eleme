border-1px($color)
  position: relative
  &::after
    display: block
    position: absolute
    width: 100%
    left: 0
    bottom: 0
    border-top: 1px solid $color
    content: ''

border-col-1px($color)
  position: relative
  &::after
    display: block
    position: absolute
    height: 100%
    left: 0
    top: 0
    border-left: 1px solid $color
    content: ''

